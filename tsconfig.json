{
  "compilerOptions": {
    "strict": true,
    "outDir": "./build/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": [
    ".eslintrc.js",
    "./config/**/*.ts",
    "./config/**/*.tsx",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "json-server/**/*"
  ]
}
